{
  "name": "frontend (nuxt2 + vue2)",
  "dockerComposeFile": [
    "../../docker-compose.yml",
    "../../docker-compose.dev.yml",
    "./compose.enable.yml",
    "./compose.init.yml"
  ],
  "service": "frontend",
  "workspaceFolder": "/usr/src/app",
  "runServices": ["frontend"],
  "overrideCommand": false,

  // node:alpine image runs as "node"
  "remoteUser": "node",

  // Keep VS Code server fast/persistent in a named volume
  "mounts": [
    "source=vscode-server-frontend,target=/home/node/.vscode-server,type=volume"
  ],

  // pnpm store is the compose volume at /pnpm-store
  "containerEnv": {
    "PNPM_STORE_DIR": "/pnpm-store"
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.cwd": "${workspaceFolder}",

        // TypeScript/ESLint scoped to this workspace
        "typescript.tsdk": "node_modules/typescript/lib",
        "eslint.workingDirectories": [{ "directory": ".", "changeProcessCWD": true }],

        // Jest integration
        "jest.jestCommandLine": "pnpm test:unit --",
        "jest.rootPath": ".",

        // Reduce watcher churn
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.nuxt/**": true,
          "**/dist/**": true,
          "**/coverage/**": true
        },

        // Optional, format on save
        "editor.formatOnSave": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "kavod-io.vscode-jest-test-adapter",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig",
        // Vue 2 authoring
        "octref.vetur"
      ]
    }
  },

  // Install deps and silence pnpm build approval for Nuxt
  "postCreateCommand": "sh -lc 'set -eux; \
    corepack enable; corepack prepare pnpm@10.15.1 --activate; \
    [ -f package.json ] && pnpm install --frozen-lockfile || true; \
    pnpm approve-builds nuxt --yes || true \
  '",

  // Nuxt 2 dev server default
  "forwardPorts": [3000],
  "otherPortsAttributes": { "onAutoForward": "notify" }
}