{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "types": ["node", "jest"],          // removed "vite/client"
    "skipLibCheck": true
  },
  "include": ["**/*.js", "**/*.vue", "test/**/*.js"],
  "exclude": ["node_modules", ".nuxt", "dist", "coverage"]
}