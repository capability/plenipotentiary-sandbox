# =============================================================================
# APP â€” change these first
# =============================================================================
APP_NAME=app-skeleton
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# Mail sender
MAIL_FROM_ADDRESS="hello@app-skeleton.test"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# LOGGING
# =============================================================================
LOG_CHANNEL=stderr_json
LOG_LEVEL=debug

# =============================================================================
# DATABASE (Docker services: db/cache/mail)
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=app_db
DB_USERNAME=app_user
DB_PASSWORD=app_pass

# =============================================================================
# CACHE / SESSION / QUEUE
# =============================================================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

REDIS_HOST=cache
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CLIENT=phpredis

# =============================================================================
# MAIL (Mailpit)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mail
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# =============================================================================
# FILES & MISC
# =============================================================================
FILESYSTEM_DISK=local
BROADCAST_DRIVER=log
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# AWS PLACEHOLDERS (standard Laravel)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

