{
  "name": "Pleni Docs",
  "dockerFile": "../Dockerfile",
  "appPort": ["3001:3000"],
  "postCreateCommand": "corepack enable && pnpm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteUser": "node",
  "mounts": [
    "type=volume,source=pnpm-store,target=/home/node/.local/share/pnpm/store"
  ]
}
