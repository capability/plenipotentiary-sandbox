{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["deps", "weekly"],
  "schedule": ["before 7am on monday"],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 10,
  "rangeStrategy": "pin",
  "dependencyDashboard": true,
  "packageRules": [
    { "matchDepTypes": ["dependencies"], "automerge": false },
    { "matchDepTypes": ["devDependencies"], "automerge": false, "groupName": "dev toolchain weekly" },
    { "matchUpdateTypes": ["patch"], "automerge": true, "automergeType": "branch" },
    { "matchUpdateTypes": ["minor"], "automerge": false },
    { "matchManagers": ["npm"], "enabled": true }
  ]
}
